@model Conch.Deck

@{ 
    Layout = null;
}

<!DOCTYPE html>
<html ng-app="presenter">
<head>
    <meta charset="utf-8" />
    <title>@Model.Title</title>
    @foreach (var stylesheet in Model.GetStylesheets())
    {
        <link href="@stylesheet" rel="stylesheet" />
    }
    <link href="~/content/ngtoast.css" rel="stylesheet" />
</head>
<body>
    <div class="nav navbar navbar-fixed-top">
        <div class="navbar-brand">@Model.Title</div>
    </div>
    <ng-toast></ng-toast>
    <div ui-view>
    </div>
    <script src="~/scripts/jquery-1.10.2.min.js"></script>
    <script src="~/scripts/vendor/lodash.compat.js"></script>
    <script src="~/scripts/vendor/angular.js"></script>
    <script src="~/scripts/vendor/angular-animate.js"></script>
    <script src="~/scripts/vendor/angular-sanitize.js"></script>
    <script src="~/scripts/vendor/angular-ui-router.js"></script>
    <script src="~/scripts/vendor/ngtoast.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/signalr/jquery.signalr-2.0.3.js"></script>
    <script src="/signalr/js"></script>
    <script src="~/scripts/presenter.js"></script>
</body>
</html>